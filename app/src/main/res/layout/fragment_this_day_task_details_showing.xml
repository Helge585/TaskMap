<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="step"
            type="com.kuznetsov.taskmap.entity.Step" />

        <variable
            name="task"
            type="com.kuznetsov.taskmap.entity.ThisDayTask" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/textw_name"
                android:gravity="center"
                android:textSize="20sp"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{ task.name }"/>

            <EditText
                android:id="@+id/textw_description"
                android:paddingTop="8dp"
                android:textSize="15sp"
                android:enabled="false"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{ task.description }"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkbox_done"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"/>

                <Button
                    android:id="@+id/button_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"/>

                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/slider_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/step_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="@{ step.name }"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/step_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:enabled="false"
                    app:trackColorActive="@color/lime_green"
                    app:trackColorInactive="@color/silver"
                    app:thumbColor="@color/dim_gray"
                    app:trackHeight="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/minus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="-1"/>

                    <TextView
                        android:id="@+id/percent_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text=""/>

                    <Button
                        android:id="@+id/plus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="+1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/slider_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/step_edit_button"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_settings_24"/>

                <ImageButton
                    android:id="@+id/save_button"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/save"
                    android:text="Save"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/slider_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text='@{ "Created: " + step.creatingDateInString }'/>
        </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/slider_layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/increments_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:visibility="invisible"
                android:gravity="top"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
</layout>
